@model List<Kid>


@foreach (var item in Model)
{
    <div class="col-lg-4 col-sm-6 col-md-4 ">
        <div class="box">
            <div class="img">
                <a href="Details/@item.Id">
                    <img src="~/assets/image/@item.ImgUrl"
                         style="background-image:
                                url(@item.BgImgUrl);"
                         alt="img" draggable="false">
                </a>
            </div>
            <p>
                <span id="event_date">@item.Date</span>
                <span id="event_location"> • @item.Location</span>
                <span id="name">@item.Name</span>
            </p>
            <button><span class="btn"><span class="price">@item.Price ₼</span>-dan</span></button>
        </div>
    </div>
}